	<cache name="agentCache"
	      maxEntriesLocalHeap="1000"
	      eternal="false"
	      timeToIdleSeconds="30"
	      timeToLiveSeconds="0"
	      overflowToDisk="false"/>
		
	<cache name="metricCache"
	      maxEntriesLocalHeap="1000"
	      eternal="false"
