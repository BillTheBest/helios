-->
	      <dependency>
			<groupId>args4j</groupId>
			<artifactId>args4j</artifactId>
			<version>${args4j.version}</version>
	      </dependency>
	      <dependency>
			<groupId>args4j</groupId>
			<artifactId>args4j-tools</artifactId>
			<version>${args4j.version}</version>
			<scope>provided</scope>
	      </dependency>



  </dependencies>
</project>
